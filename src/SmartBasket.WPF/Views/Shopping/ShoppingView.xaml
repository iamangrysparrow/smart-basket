                        <TextBox Text="{Binding ToolResult, Mode=OneWay}"
                                 IsReadOnly="True"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 Background="{DynamicResource BackgroundBaseBrush}"
                                 BorderThickness="0"
                                 Padding="6,4"
                                 MaxHeight="150"
                                 VerticalScrollBarVisibility="Auto"
                                 Visibility="{Binding ToolResult, Converter={StaticResource NotNullToVis}}"/>
