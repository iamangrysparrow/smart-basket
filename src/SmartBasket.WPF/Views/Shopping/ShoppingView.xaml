                                 VerticalScrollBarVisibility="Auto"/>
                        <TextBlock Text="Ð ÐµÐ·ÑƒÐ»ÑŒÑ‚Ð°Ñ‚:" Style="{StaticResource CaptionText}"
                                   Foreground="{DynamicResource ForegroundTertiaryBrush}"
                                   Margin="0,8,0,2"
