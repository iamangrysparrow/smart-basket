<UserControl x:Class="SmartBasket.WPF.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filters - compact -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="4" Margin="0,0,0,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Shop:" Style="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox Width="120" FontSize="11" ItemsSource="{Binding ShopFilters}"
                          SelectedItem="{Binding SelectedShopFilter}" IsEditable="True" Margin="0,0,8,0"/>

                <TextBlock Text="From:" Style="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <DatePicker SelectedDate="{Binding FilterDateFrom}" Width="95" FontSize="10" Margin="0,0,4,0"/>

                <TextBlock Text="To:" Style="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <DatePicker SelectedDate="{Binding FilterDateTo}" Width="95" FontSize="10" Margin="0,0,8,0"/>

                <Button Content="Apply" Command="{Binding ApplyFiltersAsyncCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,4,0"/>
                <Button Content="Clear" Command="{Binding ClearFiltersAsyncCommand}" Style="{StaticResource SecondaryButton}"/>

                <Border Style="{StaticResource Badge}" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource TextSecondary}" FontSize="10">
                        <Run Text="{Binding TotalReceiptsCount}" FontWeight="Bold"/>
                        <Run Text=" receipts ·"/>
                        <Run Text="{Binding TotalSum, StringFormat=N0}" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}"/>
                        <Run Text=" ₽" Foreground="{DynamicResource SuccessBrush}"/>
                    </TextBlock>
                </Border>
            </StackPanel>
        </Border>

        <!-- Master-Detail -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Receipts List (Master) -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader}" CornerRadius="4,4,0,0">
                        <TextBlock Text="Receipts" Style="{StaticResource H3}"/>
                    </Border>
                    <ListBox Grid.Row="1" ItemsSource="{Binding Receipts}" SelectedItem="{Binding SelectedReceipt}"
                             Style="{StaticResource ReceiptListBox}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource ReceiptListBoxItem}"/>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Shop}" Style="{StaticResource H3}"/>
                                        <TextBlock Style="{StaticResource TextSecondary}" FontSize="10">
                                            <Run Text="{Binding Date, StringFormat=dd.MM.yyyy, Mode=OneWay}"/>
                                            <Run Text=" · "/>
                                            <Run Text="{Binding ItemCount, Mode=OneWay}"/>
                                            <Run Text=" items"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Style="{StaticResource PriceText}" VerticalAlignment="Center">
                                        <Run Text="{Binding Total, StringFormat={}{0:N0}, Mode=OneWay}"/><Run Text=" ₽"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"
                          Background="Transparent" Cursor="SizeWE"/>

            <!-- Receipt Items (Detail) -->
            <Border Grid.Column="2" Style="{StaticResource Card}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header with receipt info -->
                    <Border Grid.Row="0" CornerRadius="4,4,0,0" Padding="6,4" Background="{DynamicResource AccentBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" FontSize="12" Foreground="White"
                                           Text="{Binding SelectedReceipt.Shop, FallbackValue='Select receipt'}"/>
                                <TextBlock Foreground="#CCFFFFFF" FontSize="10" Margin="8,0,0,0" VerticalAlignment="Center">
                                    <Run Text="{Binding SelectedReceipt.Date, StringFormat=dd.MM.yyyy, FallbackValue='-', Mode=OneWay}"/>
                                    <Run Text=" #"/>
                                    <Run Text="{Binding SelectedReceipt.OrderNumber, FallbackValue='-', Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Grid.Column="1" FontSize="13" FontWeight="Bold" Foreground="White">
                                <Run Text="{Binding SelectedReceipt.Total, StringFormat=N0, FallbackValue='0', Mode=OneWay}"/>
                                <Run Text=" ₽"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Search box -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceAltBrush}" Padding="4,2">
                        <TextBox Text="{Binding ItemSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextInput}" FontSize="11"/>
                    </Border>

                    <!-- Items list -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="4,2">
                        <ItemsControl ItemsSource="{Binding FilteredItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ItemCard}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" Style="{StaticResource H3}" TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Style="{StaticResource TextSecondary}" FontSize="10">
                                                        <Run Text="{Binding Quantity, Mode=OneWay}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding UnitOfMeasure, FallbackValue='шт', Mode=OneWay}"/>
                                                    </TextBlock>
                                                    <TextBlock Text=" · " Style="{StaticResource TextSecondary}" FontSize="10"/>
                                                    <TextBlock Text="{Binding ProductName}" Style="{StaticResource TextSecondary}" FontSize="10"
                                                               Foreground="{DynamicResource AccentBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock Style="{StaticResource PriceText}" Text="{Binding Amount, StringFormat={}{0:N2} ₽}"/>
                                                <TextBlock Style="{StaticResource TextSecondary}" FontSize="9" HorizontalAlignment="Right"
                                                           Text="{Binding Price, StringFormat={}{0:N2}/шт}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
