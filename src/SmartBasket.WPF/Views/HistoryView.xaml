<UserControl x:Class="SmartBasket.WPF.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900"
             Background="{DynamicResource BackgroundBaseBrush}">

    <Grid>
        <!-- Master-Detail Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{DynamicResource SidebarWidth}" MinWidth="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== SIDEBAR (Receipts List) ===== -->
        <Border Grid.Column="0"
                Background="{DynamicResource BackgroundLayer1Brush}"
                BorderBrush="{DynamicResource BorderDefaultBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Sidebar Header with Search -->
                <Border Grid.Row="0"
                        Padding="12"
                        BorderBrush="{DynamicResource BorderSubtleBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Search Box -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource BackgroundBaseBrush}"
                                BorderBrush="{DynamicResource BorderDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource RadiusM}"
                                Padding="8,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ”" Foreground="{DynamicResource ForegroundTertiaryBrush}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding ReceiptSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="{DynamicResource ForegroundPrimaryBrush}"
                                         FontSize="{DynamicResource FontSizeBody}"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Filters Row -->
                        <Grid Grid.Row="1" Margin="0,8,0,0">
                            <ComboBox FontSize="{DynamicResource FontSizeCaption}"
                                      ItemsSource="{Binding ShopFilters}"
                                      SelectedItem="{Binding SelectedShopFilter}"
                                      Style="{StaticResource DefaultComboBox}"
                                      ItemContainerStyle="{StaticResource DefaultComboBoxItem}"/>
                            <!-- Clear button overlaid on right side -->
                            <Button Content="Ã—"
                                    Command="{Binding ClearFiltersCommand}"
                                    ToolTip="Ð¡Ð±Ñ€Ð¾ÑÐ¸Ñ‚ÑŒ Ñ„Ð¸Ð»ÑŒÑ‚Ñ€Ñ‹"
                                    Style="{StaticResource GhostButton}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Padding="4,2"
                                    Margin="0,0,22,0"
                                    FontSize="12"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Receipts List -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Receipts}"
                         SelectedItem="{Binding SelectedReceipt}"
                         Style="{StaticResource SidebarListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Receipt Info -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Shop}"
                                               Style="{StaticResource BodyTextStrong}"/>
                                    <TextBlock Style="{StaticResource CaptionText}" Margin="0,2,0,0">
                                        <Run Text="{Binding Date, StringFormat=dd.MM.yyyy, Mode=OneWay}"/>
                                        <Run Text=" Â· "/>
                                        <Run Text="{Binding ItemCount, Mode=OneWay}"/>
                                        <Run Text=" items"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Receipt Amount -->
                                <TextBlock Grid.Column="1"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource BodyTextStrong}">
                                    <Run Text="{Binding Total, StringFormat={}{0:N0}, Mode=OneWay}"/>
                                    <Run Text=" â‚½"/>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="{DynamicResource BorderDefaultBrush}"
                      Cursor="SizeWE"/>

        <!-- ===== CONTENT (Receipt Details) ===== -->
        <Border Grid.Column="2"
                Background="{DynamicResource BackgroundBaseBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Content Header -->
                <Border Grid.Row="0"
                        Padding="24,16"
                        BorderBrush="{DynamicResource BorderSubtleBrush}"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Receipt Title -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedReceipt.Shop, FallbackValue='Ð’Ñ‹Ð±ÐµÑ€Ð¸Ñ‚Ðµ Ñ‡ÐµÐº'}"
                                       Style="{StaticResource TitleText}"/>
                            <TextBlock Style="{StaticResource CaptionText}"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0">
                                <Run Text="{Binding SelectedReceipt.Date, StringFormat=dd.MM.yyyy, FallbackValue='-', Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Style="{StaticResource CaptionText}"
                                       Foreground="{DynamicResource ForegroundTertiaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0">
                                <Run Text="#"/>
                                <Run Text="{Binding SelectedReceipt.OrderNumber, FallbackValue='-', Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Receipt Total -->
                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource AccentBrush}">
                            <Run Text="{Binding SelectedReceipt.Total, StringFormat=N0, FallbackValue='0', Mode=OneWay}"/>
                            <Run Text=" â‚½"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Items Table -->
                <Grid Grid.Row="1" Margin="24,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Border Grid.Row="0"
                            BorderBrush="{DynamicResource BorderStrongBrush}"
                            BorderThickness="0,0,0,2"
                            Padding="0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ÐÐÐ—Ð’ÐÐÐ˜Ð•" Style="{StaticResource TableHeaderText}"/>
                            <TextBlock Grid.Column="1" Text="ÐšÐžÐ›-Ð’Ðž" Style="{StaticResource TableHeaderText}" TextAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="Ð¦Ð•ÐÐ" Style="{StaticResource TableHeaderText}" TextAlignment="Right"/>
                            <TextBlock Grid.Column="3" Text="Ð¡Ð£ÐœÐœÐ" Style="{StaticResource TableHeaderText}" TextAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Items List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="-24,0">
                        <ItemsControl ItemsSource="{Binding FilteredItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource BorderSubtleBrush}"
                                            BorderThickness="0,0,0,1"
                                            Padding="24,12">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource BackgroundLayer1Brush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Item Name + Category -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}"
                                                           Style="{StaticResource BodyText}"
                                                           TextWrapping="Wrap"/>
                                                <!-- Product Name (Category) -->
                                                <TextBlock Text="{Binding ProductName}"
                                                           Style="{StaticResource CaptionText}"
                                                           FontStyle="Italic"
                                                           Foreground="{DynamicResource ForegroundTertiaryBrush}"
                                                           Margin="0,2,0,0"/>
                                                <!-- Labels -->
                                                <ItemsControl ItemsSource="{Binding Labels}" Margin="0,4,0,0">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{Binding Color, Converter={StaticResource StringToColor}}"
                                                                    CornerRadius="{DynamicResource RadiusS}"
                                                                    Padding="6,2"
                                                                    Margin="0,0,4,0">
                                                                <TextBlock Text="{Binding Name}"
                                                                           Style="{StaticResource CaptionText}"
                                                                           Foreground="White"
                                                                           FontWeight="Medium"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>

                                            <!-- Quantity -->
                                            <TextBlock Grid.Column="1"
                                                       Style="{StaticResource CaptionText}"
                                                       TextAlignment="Right"
                                                       VerticalAlignment="Top">
                                                <Run Text="{Binding Quantity, Mode=OneWay}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding UnitOfMeasure, FallbackValue='ÑˆÑ‚', Mode=OneWay}"/>
                                            </TextBlock>

                                            <!-- Price per unit -->
                                            <TextBlock Grid.Column="2"
                                                       Style="{StaticResource CaptionText}"
                                                       TextAlignment="Right"
                                                       VerticalAlignment="Top">
                                                <Run Text="{Binding Price, StringFormat={}{0:N2}, Mode=OneWay}"/>
                                                <Run Text=" â‚½/"/>
                                                <Run Text="{Binding UnitOfMeasure, FallbackValue='ÑˆÑ‚', Mode=OneWay}"/>
                                            </TextBlock>

                                            <!-- Amount -->
                                            <TextBlock Grid.Column="3"
                                                       Style="{StaticResource BodyTextStrong}"
                                                       TextAlignment="Right"
                                                       VerticalAlignment="Top">
                                                <Run Text="{Binding Amount, StringFormat={}{0:N2}, Mode=OneWay}"/>
                                                <Run Text=" â‚½"/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
