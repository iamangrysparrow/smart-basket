<Window x:Class="SmartBasket.WPF.Views.PromptEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать системный промпт"
        Width="700" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBaseBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Системный промпт"
                       Style="{StaticResource SubtitleText}"
                       Foreground="{DynamicResource ForegroundPrimaryBrush}"/>
            <TextBlock Text="Используйте {{TODAY}} для подстановки текущей даты (YYYY-MM-DD)"
                       Style="{StaticResource CaptionText}"
                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Prompt TextBox -->
        <Border Grid.Row="1"
                Background="{DynamicResource BackgroundLayer1Brush}"
                BorderBrush="{DynamicResource BorderDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4">
            <TextBox x:Name="PromptTextBox"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     FontFamily="Consolas"
                     FontSize="13"
                     Padding="8"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="{DynamicResource ForegroundPrimaryBrush}"/>
        </Border>

        <!-- Character count -->
        <TextBlock Grid.Row="2"
                   x:Name="CharCountText"
                   Style="{StaticResource CaptionText}"
                   Foreground="{DynamicResource ForegroundTertiaryBrush}"
                   HorizontalAlignment="Right"
                   Margin="0,4,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Отмена"
                    Style="{StaticResource SecondaryButton}"
                    IsCancel="True"
                    Width="100"
                    Margin="0,0,8,0"/>
            <Button Content="Применить"
                    Style="{StaticResource PrimaryButton}"
                    Click="ApplyButton_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
