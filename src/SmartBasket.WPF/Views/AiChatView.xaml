<UserControl x:Class="SmartBasket.WPF.Views.AiChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SmartBasket.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource BackgroundBaseBrush}">

    <UserControl.Resources>
        <!-- User message style -->
        <Style x:Key="UserMessageBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource AccentLightBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,3,0"/>
            <Setter Property="CornerRadius" Value="8,8,0,8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="60,4,12,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>

        <!-- Assistant message style -->
        <Style x:Key="AssistantMessageBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundLayer1Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="CornerRadius" Value="8,8,8,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="12,4,60,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>

        <!-- System message style -->
        <Style x:Key="SystemMessageBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource WarningLightBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="40,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Message template selector -->
        <DataTemplate x:Key="UserMessageTemplate" DataType="{x:Type vm:ChatMessage}">
            <Border Style="{StaticResource UserMessageBorder}">
                <StackPanel>
                    <TextBlock Text="{Binding Content}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource ForegroundPrimaryBrush}"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                               Style="{StaticResource CaptionText}"
                               Foreground="{DynamicResource ForegroundTertiaryBrush}"
                               HorizontalAlignment="Right"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="AssistantMessageTemplate" DataType="{x:Type vm:ChatMessage}">
            <Border Style="{StaticResource AssistantMessageBorder}">
                <StackPanel>
                    <TextBlock Text="{Binding Content}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource ForegroundPrimaryBrush}"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                               Style="{StaticResource CaptionText}"
                               Foreground="{DynamicResource ForegroundTertiaryBrush}"
                               HorizontalAlignment="Left"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="SystemMessageTemplate" DataType="{x:Type vm:ChatMessage}">
            <Border Style="{StaticResource SystemMessageBorder}">
                <TextBlock Text="{Binding Content}"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource WarningBrush}"
                           FontStyle="Italic"
                           FontSize="12"/>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with provider selector -->
        <Border Grid.Row="0"
                Background="{DynamicResource BackgroundLayer1Brush}"
                BorderBrush="{DynamicResource BorderDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Provider selector -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="{StaticResource IconAiChat}"
                          Fill="{DynamicResource AccentBrush}"
                          Width="20" Height="20" Stretch="Uniform"
                          Margin="0,0,8,0"/>
                    <TextBlock Text="Провайдер:"
                               Style="{StaticResource BodyText}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding AvailableProviders}"
                              SelectedItem="{Binding SelectedProvider}"
                              MinWidth="200"
                              IsEnabled="{Binding HasProviders}"/>
                </StackPanel>

                <!-- Status -->
                <TextBlock Grid.Column="1"
                           Text="{Binding ConnectionStatus}"
                           Style="{StaticResource CaptionText}"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Prompt button -->
                    <Button Style="{StaticResource SecondaryButton}"
                            Click="PromptButton_Click"
                            ToolTip="Редактировать системный промпт"
                            Padding="8,4"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconEdit}"
                                  Fill="{DynamicResource ForegroundSecondaryBrush}"
                                  Width="14" Height="14" Stretch="Uniform"
                                  Margin="0,0,4,0"/>
                            <TextBlock Text="Промпт"/>
                        </StackPanel>
                    </Button>

                    <!-- Clear button -->
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding ClearChatCommand}"
                            ToolTip="Очистить чат"
                            Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconClear}"
                                  Fill="{DynamicResource ForegroundSecondaryBrush}"
                                  Width="14" Height="14" Stretch="Uniform"
                                  Margin="0,0,4,0"/>
                            <TextBlock Text="Очистить"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Messages area -->
        <ScrollViewer Grid.Row="1"
                      x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="{DynamicResource BackgroundBaseBrush}">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Messages}" Margin="0,8,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="ContentTemplate" Value="{StaticResource AssistantMessageTemplate}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource UserMessageTemplate}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsSystem}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource SystemMessageTemplate}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Typing indicator (visible when processing) -->
                <Border Style="{StaticResource AssistantMessageBorder}"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"
                        Margin="12,4,60,8">
                    <StackPanel Orientation="Horizontal">
                        <!-- Animated dots -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="Dot1" Width="8" Height="8" Fill="{DynamicResource AccentBrush}" Margin="0,0,4,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="0.3" To="1" Duration="0:0:0.4"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <Ellipse x:Name="Dot2" Width="8" Height="8" Fill="{DynamicResource AccentBrush}" Margin="0,0,4,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.15">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="0.3" To="1" Duration="0:0:0.4"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <Ellipse x:Name="Dot3" Width="8" Height="8" Fill="{DynamicResource AccentBrush}">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="0.3" To="1" Duration="0:0:0.4"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </StackPanel>
                        <TextBlock Text="Модель думает..."
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   FontStyle="Italic"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Empty state -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding HasProviders, Converter={StaticResource InverseBoolToVis}}">
            <Path Data="{StaticResource IconWarning}"
                  Fill="{DynamicResource WarningBrush}"
                  Width="48" Height="48" Stretch="Uniform"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,16"/>
            <TextBlock Text="Нет настроенных AI провайдеров"
                       Style="{StaticResource SubtitleText}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Добавьте провайдера в настройках приложения"
                       Style="{StaticResource CaptionText}"
                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Input area -->
        <Border Grid.Row="2"
                Background="{DynamicResource BackgroundLayer1Brush}"
                BorderBrush="{DynamicResource BorderDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"
                         Padding="12,8"
                         MaxHeight="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="False"
                         KeyDown="InputTextBox_KeyDown"
                         IsEnabled="{Binding HasProviders}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                    <!-- Cancel button (visible when processing) -->
                    <Button Style="{StaticResource DangerButton}"
                            Command="{Binding CancelRequestCommand}"
                            Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"
                            ToolTip="Отменить"
                            Padding="12,8"
                            Margin="0,0,8,0">
                        <Path Data="{StaticResource IconCancel}"
                              Fill="{DynamicResource TextOnAccentBrush}"
                              Width="16" Height="16" Stretch="Uniform"/>
                    </Button>

                    <!-- Send button -->
                    <Button Style="{StaticResource PrimaryButton}"
                            Command="{Binding SendMessageCommand}"
                            ToolTip="Отправить (Enter)"
                            Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отправить" Margin="0,0,4,0"/>
                            <ProgressBar Width="16" Height="16"
                                         IsIndeterminate="True"
                                         Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
