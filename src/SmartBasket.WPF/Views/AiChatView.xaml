<UserControl x:Class="SmartBasket.WPF.Views.AiChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SmartBasket.WPF.ViewModels"
             xmlns:mdxaml="clr-namespace:MdXaml;assembly=MdXaml"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource BackgroundBaseBrush}">

    <UserControl.Resources>
        <!-- User message style -->
        <Style x:Key="UserMessageBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource AccentLightBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,3,0"/>
            <Setter Property="CornerRadius" Value="8,8,0,8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="60,4,12,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>

        <!-- Assistant message style - на всю ширину -->
        <Style x:Key="AssistantMessageBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundLayer1Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="CornerRadius" Value="8,8,8,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="12,4,12,4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <!-- System message style -->
        <Style x:Key="SystemMessageBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource WarningLightBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="40,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Part header button style -->
        <Style x:Key="PartHeaderButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BackgroundLayer2Brush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Thinking part style - стилизован как Tool Call с оранжевым акцентом -->
        <Style x:Key="ThinkingPartBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundLayer2Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>

        <!-- Tool call part style -->
        <Style x:Key="ToolCallPartBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundLayer2Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>

        <!-- User message template -->
        <DataTemplate x:Key="UserMessageTemplate" DataType="{x:Type vm:ChatMessage}">
            <Border Style="{StaticResource UserMessageBorder}">
                <StackPanel>
                    <TextBlock Text="{Binding UserText}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource ForegroundPrimaryBrush}"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                               Style="{StaticResource CaptionText}"
                               Foreground="{DynamicResource ForegroundTertiaryBrush}"
                               HorizontalAlignment="Right"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Selectable TextBox style (looks like TextBlock but selectable) -->
        <Style x:Key="SelectableTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Background="{TemplateBinding Background}"
                                      Focusable="False"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Disabled"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Copy button style -->
        <Style x:Key="CopyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="ToolTip" Value="Копировать текст"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <Path x:Name="icon"
                                  Data="{StaticResource IconCopy}"
                                  Fill="{DynamicResource ForegroundTertiaryBrush}"
                                  Width="14" Height="14" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBrush}"/>
                                <Setter TargetName="icon" Property="Fill" Value="{DynamicResource ForegroundPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Thinking part template -->
        <DataTemplate x:Key="ThinkingPartTemplate" DataType="{x:Type vm:AssistantResponsePart}">
            <Border Style="{StaticResource ThinkingPartBorder}">
                <StackPanel>
                    <!-- Header with collapse/expand and copy button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Style="{StaticResource PartHeaderButton}"
                                Click="TogglePartExpand_Click"
                                Tag="{Binding}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconThinking}"
                                      Fill="{DynamicResource WarningBrush}"
                                      Width="14" Height="14" Stretch="Uniform"
                                      Margin="0,0,6,0"/>
                                <TextBlock Text="Рассуждения"
                                           Style="{StaticResource CaptionText}"
                                           Foreground="{DynamicResource WarningBrush}"/>
                                <Path Data="{Binding IsExpanded, Converter={StaticResource BoolToExpandIcon}}"
                                      Fill="{DynamicResource ForegroundTertiaryBrush}"
                                      Width="10" Height="10" Stretch="Uniform"
                                      Margin="6,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="1"
                                Style="{StaticResource CopyButtonStyle}"
                                Click="CopyAnswerText_Click"
                                Tag="{Binding Text}"/>
                    </Grid>
                    <!-- Content (visible when expanded) - selectable -->
                    <TextBox Text="{Binding Text, Mode=OneWay}"
                             Style="{StaticResource SelectableTextBoxStyle}"
                             Foreground="{DynamicResource ForegroundSecondaryBrush}"
                             FontStyle="Italic"
                             Margin="0,4,0,0"
                             Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Tool call part template -->
        <DataTemplate x:Key="ToolCallPartTemplate" DataType="{x:Type vm:AssistantResponsePart}">
            <Border Style="{StaticResource ToolCallPartBorder}">
                <StackPanel>
                    <!-- Header with copy button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Style="{StaticResource PartHeaderButton}"
                                Click="TogglePartExpand_Click"
                                Tag="{Binding}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconTool}"
                                      Fill="{DynamicResource AccentBrush}"
                                      Width="14" Height="14" Stretch="Uniform"
                                      Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource CaptionText}"
                                           Foreground="{DynamicResource AccentBrush}">
                                    <Run Text="{Binding ToolName, Mode=OneWay}"/>
                                </TextBlock>
                                <!-- Status indicator -->
                                <Path Data="{StaticResource IconCheck}"
                                      Fill="{DynamicResource SuccessBrush}"
                                      Width="12" Height="12" Stretch="Uniform"
                                      Margin="6,0,0,0"
                                      Visibility="{Binding ToolSuccess, Converter={StaticResource NullableBoolToVis}, ConverterParameter=True}"/>
                                <Path Data="{StaticResource IconWarning}"
                                      Fill="{DynamicResource ErrorBrush}"
                                      Width="12" Height="12" Stretch="Uniform"
                                      Margin="6,0,0,0"
                                      Visibility="{Binding ToolSuccess, Converter={StaticResource NullableBoolToVis}, ConverterParameter=False}"/>
                                <!-- Loading indicator (while result is null) -->
                                <ProgressBar IsIndeterminate="True"
                                             Width="12" Height="12"
                                             Margin="6,0,0,0"
                                             Visibility="{Binding ToolResult, Converter={StaticResource NullToVis}}"/>
                                <Path Data="{Binding IsExpanded, Converter={StaticResource BoolToExpandIcon}}"
                                      Fill="{DynamicResource ForegroundTertiaryBrush}"
                                      Width="10" Height="10" Stretch="Uniform"
                                      Margin="6,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="1"
                                Style="{StaticResource CopyButtonStyle}"
                                Click="CopyToolCallText_Click"
                                Tag="{Binding}"/>
                    </Grid>
                    <!-- Details (visible when expanded) -->
                    <StackPanel Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}"
                                Margin="0,4,0,0">
                        <!-- Arguments -->
                        <TextBlock Text="Arguments:"
                                   Style="{StaticResource CaptionText}"
                                   Foreground="{DynamicResource ForegroundTertiaryBrush}"
                                   Visibility="{Binding ToolArgs, Converter={StaticResource NotNullToVis}}"/>
                        <ScrollViewer MaxHeight="150"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Margin="0,2,0,4"
                                      PreviewMouseWheel="OnChildPreviewMouseWheel"
                                      Visibility="{Binding ToolArgs, Converter={StaticResource NotNullToVis}}">
                            <TextBox Text="{Binding ToolArgs, Mode=OneWay}"
                                     Style="{StaticResource SelectableTextBoxStyle}"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        </ScrollViewer>
                        <!-- Result -->
                        <TextBlock Text="Result:"
                                   Style="{StaticResource CaptionText}"
                                   Foreground="{DynamicResource ForegroundTertiaryBrush}"
                                   Visibility="{Binding ToolResult, Converter={StaticResource NotNullToVis}}"/>
                        <ScrollViewer MaxHeight="300"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Margin="0,2,0,0"
                                      PreviewMouseWheel="OnChildPreviewMouseWheel"
                                      Visibility="{Binding ToolResult, Converter={StaticResource NotNullToVis}}">
                            <TextBox Text="{Binding ToolResult, Mode=OneWay}"
                                     Style="{StaticResource SelectableTextBoxStyle}"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Foreground="{DynamicResource ForegroundSecondaryBrush}"/>
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- MdXaml style for markdown rendering -->
        <!-- Sasabune стиль адаптируется к цветам родителя (поддерживает тёмную тему) -->
        <Style x:Key="MarkdownStyle" TargetType="mdxaml:MarkdownScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimaryBrush}"/>
            <Setter Property="MarkdownStyleName" Value="SasabuneStandard"/>
            <Setter Property="IsSelectionEnabled" Value="True"/>
        </Style>

        <!-- Final answer part style - стилизован как Tool Call -->
        <Style x:Key="FinalAnswerBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundLayer2Brush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>

        <!-- Final answer part template - основной ответ с Markdown -->
        <DataTemplate x:Key="FinalAnswerPartTemplate" DataType="{x:Type vm:AssistantResponsePart}">
            <Border Style="{StaticResource FinalAnswerBorder}">
                <StackPanel>
                    <!-- Header with icon and copy button -->
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Path Data="{StaticResource IconAnswer}"
                                  Fill="{DynamicResource SuccessBrush}"
                                  Width="14" Height="14" Stretch="Uniform"
                                  Margin="0,0,6,0"/>
                            <TextBlock Text="Ответ"
                                       Style="{StaticResource CaptionText}"
                                       Foreground="{DynamicResource SuccessBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="1"
                                Style="{StaticResource CopyButtonStyle}"
                                Click="CopyAnswerText_Click"
                                Tag="{Binding Text}"/>
                    </Grid>
                    <!-- Markdown content -->
                    <mdxaml:MarkdownScrollViewer Markdown="{Binding Text}"
                                                  Style="{StaticResource MarkdownStyle}"
                                                  PreviewMouseWheel="OnChildPreviewMouseWheel"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Part template selector using triggers -->
        <DataTemplate x:Key="AssistantPartTemplate" DataType="{x:Type vm:AssistantResponsePart}">
            <ContentControl Content="{Binding}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate" Value="{StaticResource FinalAnswerPartTemplate}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsThinking}" Value="True">
                                <Setter Property="ContentTemplate" Value="{StaticResource ThinkingPartTemplate}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsToolCall}" Value="True">
                                <Setter Property="ContentTemplate" Value="{StaticResource ToolCallPartTemplate}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </DataTemplate>

        <!-- Assistant message template with parts -->
        <DataTemplate x:Key="AssistantMessageTemplate" DataType="{x:Type vm:ChatMessage}">
            <Border Style="{StaticResource AssistantMessageBorder}">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding Parts}"
                                  ItemTemplate="{StaticResource AssistantPartTemplate}"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                               Style="{StaticResource CaptionText}"
                               Foreground="{DynamicResource ForegroundTertiaryBrush}"
                               HorizontalAlignment="Left"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- System message template -->
        <DataTemplate x:Key="SystemMessageTemplate" DataType="{x:Type vm:ChatMessage}">
            <Border Style="{StaticResource SystemMessageBorder}">
                <TextBlock Text="{Binding SystemText}"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource WarningBrush}"
                           FontStyle="Italic"
                           FontSize="12"/>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with provider selector -->
        <Border Grid.Row="0"
                Background="{DynamicResource BackgroundLayer1Brush}"
                BorderBrush="{DynamicResource BorderDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Provider selector -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="{StaticResource IconAiChat}"
                          Fill="{DynamicResource AccentBrush}"
                          Width="20" Height="20" Stretch="Uniform"
                          Margin="0,0,8,0"/>
                    <TextBlock Text="Провайдер:"
                               Style="{StaticResource BodyText}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding AvailableProviders}"
                              SelectedItem="{Binding SelectedProvider}"
                              MinWidth="200"
                              IsEnabled="{Binding HasProviders}"/>
                </StackPanel>

                <!-- Status -->
                <TextBlock Grid.Column="1"
                           Text="{Binding ConnectionStatus}"
                           Style="{StaticResource CaptionText}"
                           Foreground="{DynamicResource ForegroundSecondaryBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Force prompt injection checkbox -->
                    <CheckBox IsChecked="{Binding ForcePromptInjection}"
                              Content="Tools в промпте"
                              VerticalAlignment="Center"
                              ToolTip="Передавать описание инструментов в системном промпте вместо native API. Включите, если модель игнорирует native tools."
                              Margin="0,0,16,0"/>

                    <!-- Reasoning mode controls (visible only for YandexGPT) -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,16,0"
                                Visibility="{Binding ReasoningControlsVisible, Converter={StaticResource BoolToVis}}">
                        <CheckBox IsChecked="{Binding IsReasoningEnabled}"
                                  Content="Рассуждения"
                                  VerticalAlignment="Center"
                                  ToolTip="Включить режим рассуждений (reasoning mode)"
                                  Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding ReasoningEffortOptions}"
                                  SelectedItem="{Binding SelectedReasoningEffort}"
                                  IsEnabled="{Binding IsReasoningEnabled}"
                                  MinWidth="80"
                                  ToolTip="Уровень рассуждений: low (быстро), medium (баланс), high (тщательно)"/>
                    </StackPanel>

                    <!-- Prompt button -->
                    <Button Style="{StaticResource SecondaryButton}"
                            Click="PromptButton_Click"
                            ToolTip="Редактировать системный промпт"
                            Padding="8,4"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconEdit}"
                                  Fill="{DynamicResource ForegroundSecondaryBrush}"
                                  Width="14" Height="14" Stretch="Uniform"
                                  Margin="0,0,4,0"/>
                            <TextBlock Text="Промпт"/>
                        </StackPanel>
                    </Button>

                    <!-- Clear button -->
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding ClearChatCommand}"
                            ToolTip="Очистить чат"
                            Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconClear}"
                                  Fill="{DynamicResource ForegroundSecondaryBrush}"
                                  Width="14" Height="14" Stretch="Uniform"
                                  Margin="0,0,4,0"/>
                            <TextBlock Text="Очистить"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Messages area -->
        <ScrollViewer Grid.Row="1"
                      x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="{DynamicResource BackgroundBaseBrush}">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Messages}" Margin="0,8,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="ContentTemplate" Value="{StaticResource AssistantMessageTemplate}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource UserMessageTemplate}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsSystem}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource SystemMessageTemplate}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Typing indicator (visible when processing and no parts yet) -->
                <Border Style="{StaticResource AssistantMessageBorder}"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"
                        Margin="12,4,12,8">
                    <StackPanel Orientation="Horizontal">
                        <!-- Animated dots -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="Dot1" Width="8" Height="8" Fill="{DynamicResource AccentBrush}" Margin="0,0,4,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="0.3" To="1" Duration="0:0:0.4"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <Ellipse x:Name="Dot2" Width="8" Height="8" Fill="{DynamicResource AccentBrush}" Margin="0,0,4,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.15">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="0.3" To="1" Duration="0:0:0.4"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <Ellipse x:Name="Dot3" Width="8" Height="8" Fill="{DynamicResource AccentBrush}">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.3">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="0.3" To="1" Duration="0:0:0.4"
                                                                             AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </StackPanel>
                        <TextBlock Text="Модель думает..."
                                   Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                   FontStyle="Italic"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Empty state -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding HasProviders, Converter={StaticResource InverseBoolToVis}}">
            <Path Data="{StaticResource IconWarning}"
                  Fill="{DynamicResource WarningBrush}"
                  Width="48" Height="48" Stretch="Uniform"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,16"/>
            <TextBlock Text="Нет настроенных AI провайдеров"
                       Style="{StaticResource SubtitleText}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Добавьте провайдера в настройках приложения"
                       Style="{StaticResource CaptionText}"
                       Foreground="{DynamicResource ForegroundSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Input area -->
        <Border Grid.Row="2"
                Background="{DynamicResource BackgroundLayer1Brush}"
                BorderBrush="{DynamicResource BorderDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputTextBox"
                         Grid.Column="0"
                         Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Top"
                         VerticalScrollBarVisibility="Auto"
                         Padding="12,8"
                         MinHeight="40"
                         MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource HeightPercentage}, ConverterParameter=0.25}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         KeyDown="InputTextBox_KeyDown"
                         IsEnabled="{Binding HasProviders}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                    <!-- Cancel button (visible when processing) -->
                    <Button Style="{StaticResource DangerButton}"
                            Command="{Binding CancelRequestCommand}"
                            Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"
                            ToolTip="Отменить"
                            Padding="12,8"
                            Margin="0,0,8,0">
                        <Path Data="{StaticResource IconCancel}"
                              Fill="{DynamicResource TextOnAccentBrush}"
                              Width="16" Height="16" Stretch="Uniform"/>
                    </Button>

                    <!-- Send button -->
                    <Button Style="{StaticResource PrimaryButton}"
                            Command="{Binding SendMessageCommand}"
                            ToolTip="Отправить (Enter)"
                            Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отправить" Margin="0,0,4,0"/>
                            <ProgressBar Width="16" Height="16"
                                         IsIndeterminate="True"
                                         Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
