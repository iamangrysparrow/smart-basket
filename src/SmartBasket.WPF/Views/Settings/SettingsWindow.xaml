<Window x:Class="SmartBasket.WPF.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SmartBasket.WPF.ViewModels.Settings"
        xmlns:local="clr-namespace:SmartBasket.WPF.Views.Settings"
        mc:Ignorable="d"
        Title="Настройки"
        Height="600" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- TreeView Item Style -->
        <Style x:Key="CategoryTreeItem" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Navigation Tree -->
            <ColumnDefinition Width="220"/>
            <!-- Splitter -->
            <ColumnDefinition Width="Auto"/>
            <!-- Content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Status/Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left Panel: Navigation Tree -->
        <Border Grid.Column="0" Grid.Row="0"
                Background="{DynamicResource SurfaceAltBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Style="{StaticResource SectionHeader}">
                    <TextBlock Text="Категории" Style="{StaticResource H2}"/>
                </Border>

                <!-- Tree -->
                <TreeView Grid.Row="1" x:Name="CategoryTree"
                          Style="{StaticResource ModernTreeView}"
                          ItemsSource="{Binding Categories}"
                          SelectedItemChanged="CategoryTree_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="2"/>
                            <Setter Property="Margin" Value="0,1"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type vm:SettingsCategoryItem}"
                                                  ItemsSource="{Binding Items}">
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:SettingsItemViewModel}">
                                    <StackPanel Orientation="Horizontal" Margin="2">
                                        <TextBlock Text="{Binding Icon}" FontSize="12" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="11"/>
                                        <Ellipse Width="6" Height="6" Margin="6,0,0,0"
                                                 Fill="{DynamicResource SuccessBrush}"
                                                 Visibility="{Binding IsEnabled, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <!-- Add Buttons -->
                <StackPanel Grid.Row="2" Margin="8">
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding AddSourceCommand}"
                            Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontWeight="Bold" Margin="0,0,4,0"/>
                            <TextBlock Text="Источник"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding AddAiProviderCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontWeight="Bold" Margin="0,0,4,0"/>
                            <TextBlock Text="AI Провайдер"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Grid.Row="0"
                      Width="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="{DynamicResource BorderBrush}"/>

        <!-- Right Panel: Content -->
        <Border Grid.Column="2" Grid.Row="0" Padding="12">
            <Grid>
                <!-- Sources Editor -->
                <local:SourcesSettingsView Visibility="{Binding ShowSourcesEditor, Converter={StaticResource BoolToVis}}"
                                           DataContext="{Binding}"/>

                <!-- Parsers Editor -->
                <local:ParsersSettingsView Visibility="{Binding ShowParsersEditor, Converter={StaticResource BoolToVis}}"
                                           DataContext="{Binding}"/>

                <!-- AI Providers Editor -->
                <local:AiProvidersSettingsView Visibility="{Binding ShowAiProvidersEditor, Converter={StaticResource BoolToVis}}"
                                               DataContext="{Binding}"/>

                <!-- AI Operations Editor -->
                <local:AiOperationsSettingsView Visibility="{Binding ShowAiOperationsEditor, Converter={StaticResource BoolToVis}}"
                                                DataContext="{Binding}"/>
            </Grid>
        </Border>

        <!-- Bottom Panel: Status and Buttons -->
        <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                Background="{DynamicResource SurfaceAltBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource TextSecondary}"/>
                    <TextBlock Text=" *" Foreground="{DynamicResource WarningBrush}"
                               Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVis}}"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding CancelCommand}"
                            Content="Отмена"
                            Margin="0,0,8,0"/>
                    <Button x:Name="SaveButton"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding SaveCommand}"
                            Content="{Binding SaveButtonText}"
                            MinWidth="100"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
