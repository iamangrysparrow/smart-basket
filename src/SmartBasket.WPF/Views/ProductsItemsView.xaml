<UserControl x:Class="SmartBasket.WPF.Views.ProductsItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SmartBasket.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900"
             Loaded="UserControl_Loaded">

    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="4" Margin="0,0,0,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mode Switcher -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <RadioButton x:Name="ProductsModeBtn" Content="Продукты"
                                 IsChecked="{Binding IsProductsMode, Mode=TwoWay}"
                                 Style="{StaticResource {x:Type ToggleButton}}"
                                 Margin="0,0,2,0" Padding="8,3" FontSize="11"/>
                    <RadioButton Content="Метки"
                                 IsChecked="{Binding IsLabelsMode, Mode=OneWay}"
                                 Style="{StaticResource {x:Type ToggleButton}}"
                                 Padding="8,3" FontSize="11"/>
                </StackPanel>

                <Separator Grid.Column="1" Style="{StaticResource ToolbarSeparator}" Margin="8,0"/>

                <!-- Filters -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Магазин:" Style="{StaticResource TextSecondary}"
                               VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox Width="100" FontSize="10"
                              ItemsSource="{Binding ShopFilters}"
                              SelectedItem="{Binding SelectedShopFilter}"/>

                    <CheckBox Content="С дочерними" Margin="8,0,0,0" FontSize="10"
                              IsChecked="{Binding IncludeChildrenItems}"
                              Visibility="{Binding ShowIncludeChildren, Converter={StaticResource BoolToVis}}"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Statistics -->
                <Border Grid.Column="3" Style="{StaticResource Badge}" Margin="8,0" VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                    <TextBlock Style="{StaticResource TextSecondary}" FontSize="9">
                        <Run Text="Продуктов:"/>
                        <Run Text="{Binding TotalProductsCount}" FontWeight="Bold"/>
                        <Run Text=" | Товаров:"/>
                        <Run Text="{Binding TotalItemsCount}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                    </TextBlock>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button Style="{StaticResource PrimaryButton}" Click="AddButton_Click"
                            ToolTip="Добавить" Padding="6,3">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconAdd}" Fill="White" Width="10" Height="10" Stretch="Uniform"/>
                            <TextBlock Text="Добавить" Margin="4,0,0,0" FontSize="10"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ToolbarButton}" Click="EditButton_Click"
                            ToolTip="Редактировать" Margin="2,0,0,0">
                        <Path Data="{StaticResource IconEdit}" Fill="{DynamicResource AccentBrush}"
                              Width="12" Height="12" Stretch="Uniform"/>
                    </Button>
                    <Button Style="{StaticResource ToolbarButton}" Click="DeleteButton_Click"
                            ToolTip="Удалить" Margin="2,0,0,0">
                        <Path Data="{StaticResource IconTrash}" Fill="{DynamicResource ErrorBrush}"
                              Width="12" Height="12" Stretch="Uniform"/>
                    </Button>
                    <Separator Style="{StaticResource ToolbarSeparator}"/>
                    <Button Style="{StaticResource ToolbarButton}" Command="{Binding RefreshCommand}"
                            IsEnabled="{Binding IsNotBusy}" ToolTip="Обновить">
                        <Path Data="{StaticResource IconRefresh}" Fill="#107C10" Width="12" Height="12" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content: Master-Detail -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240" MinWidth="180"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Master Panel (Left) -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader}" CornerRadius="4,0,0,0">
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource H3}">
                                    <Setter Property="Text" Value="Продукты"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLabelsMode}" Value="True">
                                            <Setter Property="Text" Value="Метки"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>

                    <!-- Search -->
                    <Grid Grid.Row="1" Margin="4">
                        <TextBox x:Name="MasterSearchBox" Style="{StaticResource TextInput}"
                                 Text="{Binding MasterSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="10"/>
                        <TextBlock Text="Поиск..." IsHitTestVisible="False"
                                   Style="{StaticResource TextSecondary}" FontSize="10"
                                   VerticalAlignment="Center" Margin="6,0,0,0"
                                   Visibility="{Binding Text.Length, ElementName=MasterSearchBox, Converter={StaticResource InverseBoolToVis}}"/>
                        <Path Data="{StaticResource IconSearch}" Fill="{DynamicResource TextTertiaryBrush}"
                              Width="10" Height="10" Stretch="Uniform"
                              HorizontalAlignment="Right" Margin="0,0,6,0"/>
                    </Grid>

                    <!-- TreeView for Products -->
                    <TreeView Grid.Row="2" x:Name="ProductTreeView"
                              ItemsSource="{Binding ProductTree}"
                              SelectedItemChanged="ProductTree_SelectedItemChanged"
                              Style="{StaticResource ModernTreeView}" FontSize="11"
                              Visibility="{Binding IsProductsMode, Converter={StaticResource BoolToVis}}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Margin="1">
                                    <TextBlock Text="{Binding Icon}" FontSize="10" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding Name}" FontSize="11"/>
                                    <TextBlock Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                               Style="{StaticResource TextSecondary}" FontSize="10"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>

                    <!-- ListView for Labels -->
                    <ListBox Grid.Row="2" x:Name="LabelsListBox"
                             ItemsSource="{Binding Labels}"
                             SelectedItem="{Binding SelectedLabel}"
                             Style="{StaticResource ReceiptListBox}" FontSize="11"
                             Visibility="{Binding IsLabelsMode, Converter={StaticResource BoolToVis}}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Name}" FontSize="11"/>
                                    <TextBlock Text="{Binding ItemCount, StringFormat=' ({0})'}"
                                               Style="{StaticResource TextSecondary}" FontSize="10"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <!-- GridSplitter -->
                <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"
                              Background="Transparent" Cursor="SizeWE"/>

                <!-- Detail Panel (Right) - Items DataGrid -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader}" CornerRadius="0,4,0,0">
                        <Grid>
                            <TextBlock Text="Товары" Style="{StaticResource H3}"/>
                            <TextBlock Text="{Binding StatusText}" Style="{StaticResource TextSecondary}"
                                       FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Search -->
                    <Grid Grid.Row="1" Margin="4">
                        <TextBox x:Name="ItemSearchBox" Style="{StaticResource TextInput}"
                                 Text="{Binding ItemSearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                                 FontSize="10"/>
                        <TextBlock Text="Поиск товаров..." IsHitTestVisible="False"
                                   Style="{StaticResource TextSecondary}" FontSize="10"
                                   VerticalAlignment="Center" Margin="6,0,0,0"
                                   Visibility="{Binding Text.Length, ElementName=ItemSearchBox, Converter={StaticResource InverseBoolToVis}}"/>
                        <Path Data="{StaticResource IconSearch}" Fill="{DynamicResource TextTertiaryBrush}"
                              Width="10" Height="10" Stretch="Uniform"
                              HorizontalAlignment="Right" Margin="0,0,6,0"/>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="2" x:Name="ItemsDataGrid"
                              ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem}"
                              Style="{StaticResource ModernDataGrid}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Extended"
                              SelectionChanged="ItemsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Ед." Binding="{Binding UnitOfMeasure}" Width="40"/>
                            <DataGridTextColumn Header="Магазин" Binding="{Binding Shop}" Width="80"/>
                            <DataGridTextColumn Header="#" Binding="{Binding PurchaseCount}" Width="35"/>
                            <DataGridTextColumn Header="Продукт" Binding="{Binding ProductName}" Width="100">
                                <DataGridTextColumn.Visibility>
                                    <Binding Path="DataContext.IsLabelsMode" RelativeSource="{RelativeSource AncestorType=UserControl}"
                                             Converter="{StaticResource BoolToVis}"/>
                                </DataGridTextColumn.Visibility>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Переместить в продукт" x:Name="MoveToProductMenuItem"/>
                                <MenuItem Header="Назначить метку" x:Name="AssignLabelMenuItem"/>
                                <Separator/>
                                <MenuItem Header="Снять все метки" Command="{Binding RemoveAllLabelsFromItemsCommand}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="6,3" Margin="0,4,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TextSecondary}" FontSize="10">
                        <Run Text="Продуктов:"/>
                        <Run Text="{Binding TotalProductsCount}" FontWeight="SemiBold"/>
                        <Run Text=" | Товаров:"/>
                        <Run Text="{Binding TotalItemsCount}" FontWeight="SemiBold"/>
                        <Run Text=" | Выбрано:"/>
                        <Run Text="{Binding SelectedItemsCount}" FontWeight="SemiBold" Foreground="{DynamicResource AccentBrush}"/>
                    </TextBlock>
                </StackPanel>
                <ProgressBar Width="60" Height="4" IsIndeterminate="{Binding IsBusy}"
                             HorizontalAlignment="Right"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
