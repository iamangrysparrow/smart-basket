<Window x:Class="SmartBasket.WPF.Views.PromptEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор промпта"
        Width="800" Height="600"
        MinWidth="600" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBaseBrush}"
        Foreground="{DynamicResource ForegroundPrimaryBrush}"
        TextElement.Foreground="{DynamicResource ForegroundPrimaryBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Редактор промпта" Style="{StaticResource H1}"/>
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Операция:"
                           Style="{StaticResource TextSecondary}" Margin="0,0,8,4"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="OperationText"
                           Style="{StaticResource TextPrimary}" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Провайдер:"
                           Style="{StaticResource TextSecondary}" Margin="0,0,8,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ProviderText"
                           Style="{StaticResource TextPrimary}" FontWeight="SemiBold"/>
            </Grid>
        </StackPanel>

        <!-- TabControl with System/User prompts -->
        <TabControl Grid.Row="1" Style="{StaticResource ModernTabControl}">
            <!-- System Prompt Tab -->
            <TabItem Header="Системный промпт" Style="{StaticResource ModernTabItem}">
                <Border Style="{StaticResource Card}" Padding="0" Margin="0,8,0,0">
                    <TextBox x:Name="SystemPromptTextBox"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="13"
                             Padding="8"
                             BorderThickness="0"
                             Background="{DynamicResource SurfaceBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"/>
                </Border>
            </TabItem>

            <!-- User Prompt Tab -->
            <TabItem Header="Пользовательский промпт" Style="{StaticResource ModernTabItem}">
                <Border Style="{StaticResource Card}" Padding="0" Margin="0,8,0,0">
                    <TextBox x:Name="UserPromptTextBox"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="13"
                             Padding="8"
                             BorderThickness="0"
                             Background="{DynamicResource SurfaceBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"/>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Placeholders Info -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceAltBrush}"
                CornerRadius="4" Padding="12" Margin="0,12,0,0">
            <StackPanel>
                <TextBlock Style="{StaticResource TextSecondary}" TextWrapping="Wrap">
                    <Run FontWeight="SemiBold">Доступные placeholders (для пользовательского промпта):</Run>
                </TextBlock>
                <TextBlock x:Name="PlaceholdersText" Style="{StaticResource TextSecondary}"
                           TextWrapping="Wrap" Margin="0,4,0,0" FontFamily="Consolas"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Сбросить к дефолту"
                    Style="{StaticResource SecondaryButton}"
                    Click="ResetButton_Click" Padding="12,6"/>

            <Button Grid.Column="1" x:Name="SmartPromptButton"
                    Content="Умный промпт"
                    Style="{StaticResource SecondaryButton}"
                    Click="SmartPromptButton_Click" Padding="12,6" Margin="8,0,0,0"
                    ToolTip="Вставить минимальный промпт для умных моделей (GPT-4, Claude и т.п.)"/>

            <Button Grid.Column="3" Content="Отмена"
                    Style="{StaticResource SecondaryButton}"
                    IsCancel="True" Width="90" Margin="0,0,8,0"/>

            <Button Grid.Column="4" Content="Сохранить"
                    Style="{StaticResource PrimaryButton}"
                    Click="SaveButton_Click" Width="90"/>
        </Grid>
    </Grid>
</Window>
