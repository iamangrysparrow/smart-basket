<Window x:Class="SmartBasket.WPF.Views.ChangeCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Category"
        Height="400" Width="450"
        MinHeight="350" MinWidth="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Change Category" Style="{StaticResource H1}" Margin="0,0,0,16"/>

        <!-- Item info -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Item:" Style="{StaticResource TextSecondary}"/>
                <TextBlock x:Name="ItemNameText" Text="..."
                           Style="{StaticResource H3}"
                           TextWrapping="Wrap" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Current category -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="Current category:" Style="{StaticResource TextSecondary}"/>
            <TextBlock x:Name="CurrentCategoryText" Text="Not set"
                       Foreground="{DynamicResource ErrorBrush}"
                       FontSize="14" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Select category -->
        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <RadioButton x:Name="SelectExistingRadio"
                         Content="Select existing category:"
                         IsChecked="True" Margin="0,0,0,8"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}"/>
            <ComboBox x:Name="CategoryComboBox"
                      Padding="12,10" FontSize="14"
                      IsEnabled="{Binding IsChecked, ElementName=SelectExistingRadio}"/>
        </StackPanel>

        <!-- Create new category -->
        <StackPanel Grid.Row="4" Margin="0,8,0,0">
            <RadioButton x:Name="CreateNewRadio"
                         Content="Create new category:"
                         Margin="0,0,0,8"
                         FontWeight="SemiBold"
                         Foreground="{DynamicResource TextPrimaryBrush}"/>
            <TextBox x:Name="NewCategoryTextBox"
                     Style="{StaticResource TextInput}"
                     IsEnabled="{Binding IsChecked, ElementName=CreateNewRadio}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,12,0"/>
            <Button Content="Save"
                    Style="{StaticResource PrimaryButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
