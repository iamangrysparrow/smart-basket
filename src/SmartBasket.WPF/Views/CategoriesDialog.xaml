<Window x:Class="SmartBasket.WPF.Views.CategoriesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Categories"
        Height="500" Width="500"
        MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Product Categories" Style="{StaticResource H1}"/>
            <TextBlock Text="Enter categories, one per line. You can paste a list."
                       Style="{StaticResource TextSecondary}"
                       TextWrapping="Wrap" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Info box -->
        <Border Grid.Row="1" Style="{StaticResource Badge}"
                Background="{DynamicResource InfoLightBrush}"
                Padding="12" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <Path Data="{StaticResource IconInfo}"
                      Fill="{DynamicResource InfoBrush}"
                      Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                <TextBlock Text="Examples: Milk, Coffee milk, Meat, Soup meat, Regular coffee"
                           Foreground="{DynamicResource InfoBrush}" FontSize="12" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- TextBox for categories -->
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="0">
            <TextBox x:Name="CategoriesTextBox"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontSize="14"
                     Padding="12"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     CaretBrush="{DynamicResource TextPrimaryBrush}"/>
        </Border>

        <!-- Counter -->
        <TextBlock Grid.Row="3" Margin="0,8,0,0" Style="{StaticResource TextSecondary}">
            <Run Text="Categories: "/>
            <Run x:Name="CategoryCount" Text="0" FontWeight="SemiBold"/>
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"
                    Margin="0,0,12,0"/>
            <Button Content="Save"
                    Style="{StaticResource PrimaryButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
