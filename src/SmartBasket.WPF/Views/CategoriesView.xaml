<UserControl x:Class="SmartBasket.WPF.Views.CategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="4" Margin="0,0,0,4">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource PrimaryButton}" Command="{Binding OpenCategoriesDialogCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource IconEdit}" Fill="White" Width="10" Height="10" Stretch="Uniform"/>
                        <TextBlock Text="Edit" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ToolbarButton}" Command="{Binding CategorizeAllCommand}"
                        IsEnabled="{Binding IsNotProcessing}" Margin="4,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource IconCategorize}" Fill="#107C10" Width="12" Height="12" Stretch="Uniform"/>
                        <TextBlock Text="Categorize" Margin="4,0,0,0" Foreground="#107C10"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ToolbarButton}" Command="{Binding CancelOperationCommand}" IsEnabled="{Binding IsCategorizing}">
                    <Path Data="{StaticResource IconCancel}" Fill="#D13438" Width="10" Height="10" Stretch="Uniform"/>
                </Button>
                <Button Style="{StaticResource ToolbarButton}" Command="{Binding LoadCategoryTreeCommand}" IsEnabled="{Binding IsNotProcessing}">
                    <Path Data="{StaticResource IconRefresh}" Fill="#107C10" Width="12" Height="12" Stretch="Uniform"/>
                </Button>
                <Separator Style="{StaticResource ToolbarSeparator}"/>
                <TextBlock Text="Filter:" Style="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox Width="90" FontSize="10" ItemsSource="{Binding CategoryFilters}" SelectedItem="{Binding SelectedCategoryFilter}"/>
                <TextBox Text="{Binding CategoryItemSearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextInput}" Width="100" FontSize="10" Margin="4,0,0,0"/>
                <Border Style="{StaticResource Badge}" Margin="8,0,0,0" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource TextSecondary}" FontSize="9">
                        <Run Text="{Binding TotalCategoriesCount}" FontWeight="Bold"/>
                        <Run Text=" cats ·"/>
                        <Run Text="{Binding TotalItemsCount}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                        <Run Text=" items ·"/>
                        <Run Text="{Binding UncategorizedCount}" FontWeight="Bold" Foreground="{DynamicResource ErrorBrush}"/>
                        <Run Text=" pending"/>
                    </TextBlock>
                </Border>
                <Border Style="{StaticResource Badge}" Background="{DynamicResource WarningLightBrush}" Margin="4,0,0,0"
                        Visibility="{Binding IsCategorizing, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding CategorizationProgress}" Foreground="{DynamicResource WarningBrush}" FontSize="9" FontWeight="SemiBold"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Content: TreeView + DataGrid -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" MinWidth="150"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Categories TreeView -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader}" CornerRadius="4,0,0,0">
                        <TextBlock Text="Categories" Style="{StaticResource H3}"/>
                    </Border>
                    <TreeView Grid.Row="1" x:Name="CategoryTreeView"
                              ItemsSource="{Binding CategoryTreeItems}"
                              SelectedItemChanged="CategoryTree_SelectedItemChanged"
                              Style="{StaticResource ModernTreeView}" FontSize="11">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                                <StackPanel Orientation="Horizontal" Margin="1">
                                    <TextBlock Text="{Binding Icon}" FontSize="10" Margin="0,0,3,0"/>
                                    <TextBlock Text="{Binding Name}" FontSize="11"/>
                                    <TextBlock Text="{Binding Count, StringFormat=' ({0})'}" Style="{StaticResource TextSecondary}" FontSize="10"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>

                <!-- GridSplitter -->
                <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch"
                              Background="Transparent" Cursor="SizeWE"/>

                <!-- Items DataGrid -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader}" CornerRadius="0,4,0,0">
                        <Grid>
                            <TextBlock Text="{Binding SelectedCategoryName, FallbackValue='Select category'}" Style="{StaticResource H3}"/>
                            <Button HorizontalAlignment="Right" Style="{StaticResource SecondaryButton}"
                                    Command="{Binding ChangeCategoryCommand}" IsEnabled="{Binding HasSelectedItem}">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="{StaticResource IconEdit}" Fill="{DynamicResource TextPrimaryBrush}" Width="10" Height="10" Stretch="Uniform"/>
                                    <TextBlock Text="Change" Margin="4,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding CategoryItems}" SelectedItem="{Binding SelectedCategoryItem}"
                              Style="{StaticResource ModernDataGrid}" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="100"/>
                            <DataGridTextColumn Header="#" Binding="{Binding PurchaseCount}" Width="35"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
