<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F7F7F8"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="ToolbarBrush" Color="#FAFAFA"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E1E1E3"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#E5E5EA"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1B1B1B"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6E6E73"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#8E8E93"/>
    <SolidColorBrush x:Key="TextOnAccentBrush" Color="#FFFFFF"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#5856D6"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#4F46E5"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#EEF2FF"/>
    <SolidColorBrush x:Key="AccentVeryLightBrush" Color="#F5F3FF"/>

    <!-- Semantic -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#34C759"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#D1FAE5"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FF3B30"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9500"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="#FEF3C7"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#007AFF"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="#DBEAFE"/>

    <!-- Interactive -->
    <SolidColorBrush x:Key="HoverBrush" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#EEF2FF"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#E2E8F0"/>

    <!-- Log Panel -->
    <SolidColorBrush x:Key="LogBackgroundBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="LogHeaderBrush" Color="#334155"/>
    <SolidColorBrush x:Key="LogTextBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="LogBorderBrush" Color="#475569"/>

    <!-- Badges -->
    <SolidColorBrush x:Key="BadgeDefaultBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="BadgeDefaultTextBrush" Color="#475569"/>

    <!-- Gradient for receipt header -->
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#5856D6" Offset="0"/>
        <GradientStop Color="#8B5CF6" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
