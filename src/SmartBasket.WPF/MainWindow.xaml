<Window x:Class="SmartBasket.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SmartBasket.WPF.ViewModels"
        mc:Ignorable="d"
        Title="Smart Basket - Receipt Parser"
        Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.1" Color="#000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E2E8F0"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CBD5E1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Receipt Card in List -->
        <Style x:Key="ReceiptCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08" Color="#000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Content="ðŸ“§ Fetch &amp; Parse Emails"
                        Command="{Binding FetchAndParseEmailsCommand}"
                        IsEnabled="{Binding IsNotProcessing}"
                        Padding="10,5"/>
                <Separator/>
                <Button Content="â›” Cancel"
                        Command="{Binding CancelOperationCommand}"
                        IsEnabled="{Binding IsProcessing}"
                        Padding="10,5"/>
                <Separator/>
                <Button Content="ðŸ”„ Refresh Receipts"
                        Command="{Binding LoadReceiptsCommand}"
                        IsEnabled="{Binding IsNotProcessing}"
                        Padding="10,5"/>
                <Separator/>
                <Button Content="ðŸ—„ï¸ Init DB"
                        Command="{Binding InitializeDatabaseCommand}"
                        IsEnabled="{Binding IsNotProcessing}"
                        Padding="10,5"/>
                <Button Content="ðŸ—‘ï¸ Reset DB"
                        Command="{Binding ResetDatabaseCommand}"
                        IsEnabled="{Binding IsNotProcessing}"
                        Padding="10,5"
                        Foreground="DarkRed"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Margin="5">

            <!-- Tab 1: Receipt History (Master-Detail) -->
            <TabItem Header="ðŸ“‹ Ð˜ÑÑ‚Ð¾Ñ€Ð¸Ñ Ñ‡ÐµÐºÐ¾Ð²">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filters Panel - Compact -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Padding="12" Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ÐœÐ°Ð³Ð°Ð·Ð¸Ð½" FontSize="12" Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox Width="160"
                                      ItemsSource="{Binding ShopFilters}"
                                      SelectedItem="{Binding SelectedShopFilter, Mode=TwoWay}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      Margin="0,0,16,0"/>

                            <TextBlock Text="Ð¡" FontSize="12" Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <DatePicker SelectedDate="{Binding FilterDateFrom}" Width="120" Margin="0,0,8,0"/>

                            <TextBlock Text="ÐŸÐ¾" FontSize="12" Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <DatePicker SelectedDate="{Binding FilterDateTo}" Width="120" Margin="0,0,16,0"/>

                            <Button Content="ÐŸÑ€Ð¸Ð¼ÐµÐ½Ð¸Ñ‚ÑŒ"
                                    Command="{Binding ApplyFiltersAsyncCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Padding="12,8"
                                    Margin="0,0,8,0"/>
                            <Button Content="Ð¡Ð±Ñ€Ð¾Ñ"
                                    Command="{Binding ClearFiltersAsyncCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="12,8"/>

                            <!-- Statistics -->
                            <Border Background="#F1F5F9" CornerRadius="6" Padding="12,6" Margin="24,0,0,0" VerticalAlignment="Center">
                                <TextBlock Foreground="#64748B" FontSize="13">
                                    <Run Text="Ð§ÐµÐºÐ¾Ð²: "/>
                                    <Run Text="{Binding TotalReceiptsCount, Mode=OneWay}" FontWeight="Bold" Foreground="#1E293B"/>
                                    <Run Text="  Â·  Ð¡ÑƒÐ¼Ð¼Ð°: "/>
                                    <Run Text="{Binding TotalSum, StringFormat=N0, Mode=OneWay}" FontWeight="Bold" Foreground="#10B981"/>
                                    <Run Text=" â‚½" FontWeight="Bold" Foreground="#10B981"/>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Master-Detail -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="420" MinWidth="300"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Master: Receipts List -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Padding="20,16">
                                    <TextBlock Text="Ð§ÐµÐºÐ¸" FontWeight="Bold" FontSize="16" Foreground="#1E293B"/>
                                </Border>

                                <ListBox Grid.Row="1"
                                         ItemsSource="{Binding Receipts}"
                                         SelectedItem="{Binding SelectedReceipt}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         Padding="8">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border x:Name="Bd" Style="{StaticResource ReceiptCard}">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#EEF2FF"/>
                                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#6366F1"/>
                                                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#F8FAFC"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="{Binding Shop, Mode=OneWay}"
                                                           FontWeight="SemiBold" FontSize="14" Foreground="#1E293B"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding Total, StringFormat={}{0:N0} â‚½, Mode=OneWay}"
                                                           FontWeight="Bold" FontSize="15" Foreground="#10B981"/>

                                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,6,0,0">
                                                    <Border Background="#E2E8F0" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy, Mode=OneWay}"
                                                                   Foreground="#475569" FontSize="12"/>
                                                    </Border>
                                                    <Border Background="#DBEAFE" CornerRadius="4" Padding="6,2">
                                                        <TextBlock Foreground="#1D4ED8" FontSize="12">
                                                            <Run Text="{Binding ItemCount, Mode=OneWay}"/>
                                                            <Run Text=" Ð¿Ð¾Ð·."/>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                                           Text="{Binding OrderNumber, Mode=OneWay}"
                                                           Foreground="#94A3B8" FontSize="11" VerticalAlignment="Bottom"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!-- Detail: Receipt Items -->
                        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Receipt Header - Compact -->
                                <Border Grid.Row="0" CornerRadius="12,12,0,0" Padding="16,12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#6366F1" Offset="0"/>
                                            <GradientStop Color="#8B5CF6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock FontWeight="Bold" FontSize="16" Foreground="White"
                                                       Text="{Binding SelectedReceipt.Shop, Mode=OneWay, FallbackValue='Ð’Ñ‹Ð±ÐµÑ€Ð¸Ñ‚Ðµ Ñ‡ÐµÐº'}"
                                                       VerticalAlignment="Center"/>
                                            <Border Background="#33FFFFFF" CornerRadius="4" Padding="6,3" Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Foreground="White" FontSize="12">
                                                    <Run Text="{Binding SelectedReceipt.Date, Mode=OneWay, StringFormat=dd.MM.yyyy, FallbackValue='-'}"/>
                                                </TextBlock>
                                            </Border>
                                            <Border Background="#33FFFFFF" CornerRadius="4" Padding="6,3" Margin="6,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Foreground="White" FontSize="12">
                                                    <Run Text="â„–"/>
                                                    <Run Text="{Binding SelectedReceipt.OrderNumber, Mode=OneWay, FallbackValue='-'}"/>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center">
                                                <Run Text="{Binding SelectedReceipt.Total, Mode=OneWay, StringFormat=N0, FallbackValue='0'}"/>
                                                <Run Text=" â‚½"/>
                                            </TextBlock>
                                            <TextBlock Foreground="#CCFFFFFF" FontSize="12" VerticalAlignment="Center" Margin="12,0,0,0"
                                                       Text="{Binding SelectedReceipt.ItemCount, Mode=OneWay, StringFormat={}{0} Ð¿Ð¾Ð·., FallbackValue='0 Ð¿Ð¾Ð·.'}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Search in items - Compact -->
                                <Border Grid.Row="1" Background="#F8FAFC" Padding="12,8">
                                    <TextBox Text="{Binding ItemSearchText, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource SearchBox}"
                                             Padding="10,6"
                                             Tag="ðŸ” ÐŸÐ¾Ð¸ÑÐº Ð² Ñ‡ÐµÐºÐµ..."/>
                                </Border>

                                <!-- Items as Cards -->
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="16,8">
                                    <ItemsControl ItemsSource="{Binding FilteredItems, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FAFAFA" CornerRadius="8" Padding="16,12" Margin="0,0,0,8"
                                                        BorderBrush="#E2E8F0" BorderThickness="1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding Name, Mode=OneWay}"
                                                                       FontWeight="SemiBold" FontSize="14" Foreground="#1E293B"
                                                                       TextWrapping="Wrap"/>
                                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                                <Border Background="#E2E8F0" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                                                    <TextBlock Foreground="#475569" FontSize="12">
                                                                        <Run Text="{Binding Quantity, Mode=OneWay}"/>
                                                                        <Run Text=" "/>
                                                                        <Run Text="{Binding Unit, Mode=OneWay, FallbackValue='ÑˆÑ‚'}"/>
                                                                    </TextBlock>
                                                                </Border>
                                                                <Border Background="#FEF3C7" CornerRadius="4" Padding="6,2"
                                                                        Visibility="{Binding Volume, Mode=OneWay, Converter={StaticResource BoolToVis}}">
                                                                    <TextBlock Text="{Binding Volume, Mode=OneWay}" Foreground="#92400E" FontSize="12"/>
                                                                </Border>
                                                            </StackPanel>
                                                        </StackPanel>

                                                        <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                                                   FontWeight="Bold" FontSize="16" Foreground="#10B981">
                                                            <Run Text="{Binding Price, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Tab 2: Settings & Parsing -->
            <TabItem Header="âš™ï¸ ÐÐ°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ¸ Ð¸ Ð¿Ð°Ñ€ÑÐ¸Ð½Ð³">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Settings -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <!-- Email Settings -->
                            <GroupBox Header="ðŸ“§ Email Settings (IMAP)" Margin="0,0,0,10">
                                <StackPanel Margin="5">
                                    <TextBlock Text="IMAP Server:" Margin="0,5,0,2"/>
                                    <TextBox Text="{Binding ImapServer, UpdateSourceTrigger=PropertyChanged}"/>

                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Port:"/>
                                            <TextBox Text="{Binding ImapPort, UpdateSourceTrigger=PropertyChanged}" Width="60" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                        <CheckBox Grid.Column="1" Content="Use SSL"
                                                  IsChecked="{Binding UseSsl}"
                                                  VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                                    </Grid>

                                    <TextBlock Text="Username:" Margin="0,5,0,2"/>
                                    <TextBox Text="{Binding EmailUsername, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Password:" Margin="0,5,0,2"/>
                                    <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>

                                    <TextBlock Text="Sender Filter:" Margin="0,10,0,2"/>
                                    <TextBox Text="{Binding SenderFilter, UpdateSourceTrigger=PropertyChanged}"
                                             ToolTip="Filter by sender email (e.g., noreply@shop.ru)"/>

                                    <TextBlock Text="Subject Filter:" Margin="0,5,0,2"/>
                                    <TextBox Text="{Binding SubjectFilter, UpdateSourceTrigger=PropertyChanged}"
                                             ToolTip="Filter by subject contains"/>

                                    <TextBlock Text="Search Days Back:" Margin="0,5,0,2"/>
                                    <TextBox Text="{Binding SearchDaysBack, UpdateSourceTrigger=PropertyChanged}" Width="60" HorizontalAlignment="Left"/>

                                    <Button Content="ðŸ”Œ Test Connection"
                                            Command="{Binding TestEmailConnectionCommand}"
                                            IsEnabled="{Binding IsNotProcessing}"
                                            Margin="0,10,0,0"
                                            Padding="10,5"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Ollama Settings -->
                            <GroupBox Header="ðŸ¤– Ollama Settings" Margin="0,0,0,10">
                                <StackPanel Margin="5">
                                    <TextBlock Text="Base URL:" Margin="0,5,0,2"/>
                                    <TextBox Text="{Binding OllamaBaseUrl, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Model:" Margin="0,5,0,2"/>
                                    <TextBox Text="{Binding OllamaModel, UpdateSourceTrigger=PropertyChanged}"/>

                                    <Button Content="ðŸ”Œ Test Connection"
                                            Command="{Binding TestOllamaConnectionCommand}"
                                            IsEnabled="{Binding IsNotProcessing}"
                                            Margin="0,10,0,0"
                                            Padding="10,5"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Save Settings Button -->
                            <Button Content="ðŸ’¾ Save Settings"
                                    Command="{Binding SaveSettingsCommand}"
                                    Padding="10,8"
                                    FontWeight="Bold"
                                    Background="#4CAF50"
                                    Foreground="White"/>
                        </StackPanel>
                    </ScrollViewer>

                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

                    <!-- Right Panel - Log -->
                    <GroupBox Grid.Column="2" Margin="5">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“ Log" FontWeight="Bold"/>
                                <Button Content="Clear"
                                        Command="{Binding ClearLogCommand}"
                                        Margin="15,0,0,0"
                                        Padding="8,2"/>
                                <Button Content="Save to File"
                                        Command="{Binding SaveLogCommand}"
                                        Margin="5,0,0,0"
                                        Padding="8,2"/>
                            </StackPanel>
                        </GroupBox.Header>
                        <ListBox ItemsSource="{Binding LogEntries}"
                                 x:Name="LogListBox"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 BorderThickness="0"/>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100" Height="15"
                             IsIndeterminate="{Binding IsProcessing}"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
