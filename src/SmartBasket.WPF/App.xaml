<Application x:Class="SmartBasket.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SmartBasket.WPF"
             xmlns:converters="clr-namespace:SmartBasket.WPF.Converters"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 1. Theme Colors (Light by default, replaced by ThemeManager) -->
                <ResourceDictionary Source="Themes/Colors.Light.xaml"/>

                <!-- 2. Brushes (reference colors via DynamicResource) -->
                <ResourceDictionary Source="Themes/Brushes.xaml"/>

                <!-- 3. Sizes and Typography -->
                <ResourceDictionary Source="Themes/Sizes.xaml"/>

                <!-- 4. HandyControl themes -->
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>

                <!-- 5. Icons -->
                <ResourceDictionary Source="Themes/Icons.xaml"/>

                <!-- 6. Shared Styles -->
                <ResourceDictionary Source="Themes/SharedStyles.xaml"/>

                <!-- 7. Control Styles (override defaults) -->
                <ResourceDictionary Source="Themes/Controls/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/CheckBoxStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/ListBoxStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/TagStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/TreeViewStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/DataGridStyles.xaml"/>
                <ResourceDictionary Source="Themes/Controls/TabControlStyles.xaml"/>

                <!-- 8. HandyControl overrides - MUST be LAST to override HC and our styles -->
                <ResourceDictionary Source="Themes/HandyControlOverrides.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <!-- Global Window Style (rendering quality settings) -->
            <Style TargetType="Window">
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            </Style>

            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:IntToVisibilityConverter x:Key="IntToVis"/>
            <converters:StringToColorConverter x:Key="StringToColor"/>
            <converters:DoubleToStringConverter x:Key="DoubleToString"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
